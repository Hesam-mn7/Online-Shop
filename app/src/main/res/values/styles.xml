<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/bnazanin</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="darkTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColor">#C6C6C6</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="android:windowBackground">#1E1E1E</item>
        <item name="android:colorBackground">#1E1E1E</item>
    </style>

    <style name="fontTheme">
        <item name="fontFamily">@font/andlso</item>
    </style>
    <style name="fontThemebnazanin" >
        <item name="fontFamily">@font/bnazanin</item>
    </style>

    <style name="colorAgahi">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="colorAgahiDefult">

    </style>


    <style name="backMusic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_forward_24</item>
    </style>

    <style name="back" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_baseline_arrow_forward_24</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="titleactionbar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/actionBarsizeTitle</item>

    </style>

    <style name="imagebutton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/border_product</item>
        <item name="android:textSize">@dimen/actionBarsizeTitle</item>


    </style>

    <style name="linearDarbare" parent="linearDarbare1">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="linearDarbare1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/border_darbare</item>
        <item name="android:orientation">horizontal</item>


    </style>

    <style name="textDarbare">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#535353</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="imglikedislike">
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:src">@drawable/likeicon</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="imglike" parent="imglikedislike">
        <item name="android:src">@drawable/likeicon</item>
    </style>
    <style name="imgdislike" parent="imglikedislike">
        <item name="android:src">@drawable/dilikeicon</item>
    </style>

    <style name="tvlike" parent="tvlikes">
        <item name="android:text">خرید این محصول را توصیه می کنم</item>
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="tvdislike" parent="tvlikes">
        <item name="android:text">خرید این محصول را توصیه نمی کنم</item>
        <item name="android:textColor">@color/colororange</item>
    </style>

    <style name="tvlikes">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="tvnazar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:text">ای محصول اهللیه ئ وفئقا لعاداس و اکان بنظر میس ریع ئبت و من م ننیتنری و ات من پسنذبذمش بعنریمنهه در نیا در نز نطیر دندار دحسا مسلام میکمن ع نتلتلنتلت.</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="tvname">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:text">علی از کرج</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="view2">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ECECEC</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="view">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ECECEC</item>
        <item name="android:layout_margin">10dp</item>

    </style>

    <style name="textDetail">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="textDetails" parent="textDetail">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">@dimen/textSizeDetails</item>

    </style>

    <style name="settings">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="actionbarTitle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@color/colorTitle</item>
    </style>

    <style name="gridviewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="actionbarLinear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_in_layout_hint_Style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_in_layout_error_Style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edittextProfile">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="progressColor" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">#fff</item>
    </style>

</resources>