<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onlineshophesam">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconshop"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/iconshop"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivitySettings" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivityLocation" android:screenOrientation="portrait"/>
        <activity android:name=".SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivityProfile" android:screenOrientation="portrait" />
        <activity android:name=".MainActivityDarbarema" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivityPic" android:screenOrientation="portrait" />
        <activity android:name=".MainActivityDetails" android:screenOrientation="portrait"/>
        <activity android:name=".DownloadMusicActivity" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivityHome" android:screenOrientation="portrait"/>

        <service android:name=".Service.ServiceProduct" />
    </application>

</manifest>